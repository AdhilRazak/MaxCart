<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - MaxCart</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #000000;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(135deg, #cfd8dc 0%, #607d8b 100%, #b0bec5 100%);

            height: 100vh;
            /* Ensure the container stays centered vertically */
        }

        .container {
            width: 90%;
            /* Adjusted width */
            max-width: 600px;
            background: linear-gradient(135deg, #cfd8dc 0%, #607d8b 100%, #b0bec5 100%);
            color: #000;
            padding: 40px;
            border-radius: 5px;


        }

        /* Other styles remain the same */

        .input-group {
            margin-bottom: 20px;
        }

        .input-group label {
            display: block;
            margin-bottom: 5px;
        }

        .input-group input {
            width: 96%;
            padding: 10px;
            font-size: 16px;
            border-radius: 5px;
            border: none;
            background: linear-gradient(135deg, #8fa4aa 0%, #607d8b 100%, #cfd8dc 100%);

        }

        h1 {
            text-align: center;
        }

        .btn {
            display: block;
            width: 100%;
            padding: 10px;
            font-size: 16px;
            background-color: #000000;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        /* Media queries for responsiveness */
        @media screen and (max-width: 768px) {
            .container {
                padding: 10px;
            }
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>

<body>
    <div class="container">
        <h1>Forgot Password</h1>
        <form action="/forgotemail" method="post">
            <div class="input-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email"
                    placeholder="Please enter your email address to receive an OTP for password reset" required>
            </div>
            <button type="submit" class="btn">Send OTP</button>
        </form>
    </div>
</body>

</html>
<script>
    // Function to handle form submission
    function handleSubmit(event) {
      event.preventDefault(); // Prevent the default form submission
  
      // Serialize form data
      const formData = new FormData(event.target);
      const data = {};
      formData.forEach((value, key) => {
        data[key] = value;
      });
  
      // Make an AJAX request to submit the form data
      axios.post(event.target.action, data)
        .then(response => {
          // If response is ok, reload the page or do whatever you want
          window.location.href = '/forgototp';
        })
        .catch(error => {
          // Check if the error response contains an error message
          let errorMessage = 'Something went wrong. Please try again later.';
          if (error.response && error.response.data && error.response.data.error) {
            errorMessage = error.response.data.error;
          }
  
          // Display the error message using SweetAlert
          Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: errorMessage
          });
        });
    }

    document.querySelector('form').addEventListener('submit', handleSubmit);

  </script>